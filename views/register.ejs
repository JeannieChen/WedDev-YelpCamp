
<%- include("partials/header") %>

<div class="container">
	<h3 style="text-align: center"> Sign up </h3>
	<form action="/register" method="POST">
		<div style="width: 40%; margin: 2rem auto">
			<div class="form-group">
    			<label for="formGroupExampleInput">Username</label>
				<input type="text" name="username" placeholder="username" class="form-control" id="formGroupExampleInput">
  			</div>
			
  			<div class="form-group">
    			<label for="formGroupExampleInput2">Password</label>
				<input type="password" name="password" placeholder="password" class="form-control" id="formGroupExampleInput2">
  			</div>	
			
			<div class="form-group">
    			<label for="formGroupExampleInput2">Email</label>
				<input type="email" name="email" placeholder="lovehiking@gmail.com" class="form-control" id="formGroupExampleInput2">
  			</div>	
			
			<div class="form-group">
    			<label for="formGroupExampleInput2">* Optional</label>
				<input type="text" name="isAdmin" placeholder="Wizard?" class="form-control" id="formGroupExampleInput2">
  			</div>	

			<button type="submit" class="btn btn-outline-primary btn-block">Sign up</button>	
		</div>
	</form>
</div>

<%- include("partials/footer") %>