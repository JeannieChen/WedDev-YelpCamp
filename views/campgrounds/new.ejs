<%- include("../partials/header") %>

<div class="container">
	<h3 style="text-align: center"> Create a new Campground </h3>
	<form action="/campgrounds" method="POST">
		<div style="width: 65%; margin: 2rem auto">
			<div class="form-group">
    			<label for="formGroupExampleInput">Camp Site</label>
	  			<input type="text" name="name" placeholder="Name" class="form-control" id="formGroupExampleInput">
  			</div>
			<div class="form-row">
				<div class="col-md-6 mb-3">
					<label for="validationDefault03">City</label>
					<input type="text" name="city" placeholder="City" class="form-control" id="formGroupExampleInput">
				</div>
				<div class="col-md-3 mb-3">
					<label for="validationDefault04">State</label>
					<input type="text" name="state" placeholder="State" class="form-control" id="formGroupExampleInput">
				</div>
				<div class="col-md-3 mb-3">
					<label for="validationDefault05">Country</label>
					<input type="text" name="country" placeholder="Country" class="form-control" id="formGroupExampleInput">
				</div>
			</div>
			
			<div class="form-group">
    			<label for="formGroupExampleInput"> Price</label>
	  			<input type="number" name="price" placeholder="Price per night" min="0.01" step="0.01" class="form-control" id="formGroupExampleInput">
  			</div>
			<div class="form-group">
    			<label for="formGroupExampleInput"> Website (Optional) </label>
	  			<input type="text" name="link" placeholder="http://www.hiking.com" class="form-control" id="formGroupExampleInput2">
  			</div>
  			<div class="form-group">
    			<label for="formGroupExampleInput2">Image Address</label>
	  			<input type="text" name="image" placeholder="URL" class="form-control" id="formGroupExampleInput2">
  			</div>	
			<div class="form-group">
    			<label for="formGroupExampleInput2">Description</label>
				<textarea rows="5" name="description" placeholder="i.e. Pet friendly" class="form-control" id="formGroupExampleInput2"></textarea>
  			</div>		
			<button type="submit" class="btn btn-outline-primary btn-block">Submit</button>	
		</div>
	</form>
</div>

<%- include("../partials/footer") %>