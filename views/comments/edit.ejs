<%- include("../partials/header") %>

<div class="container">
	<h3 style="text-align: center"> Edit Comment </h3>
	<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
		<div style="width: 65%; margin: 2rem auto">
			<div class="form-group">
				<textarea rows="5" name="comment[text]" class="form-control" id="formGroupExampleInput2"><%= comment.text %></textarea>
  			</div>
			
			<div class="form-group">
    			<label for="formGroupExampleInput"> Rating </label>
	  			<input type="number" name="comment[rating]" value="<%= comment.rating %>"  min="1" max="5" step="1" class="form-control" id="formGroupExampleInput">
  			</div>
			
			<button type="submit" class="btn btn-outline-primary btn-block">Submit</button>	
		</div>
	</form>
</div>

<%- include("../partials/footer") %>