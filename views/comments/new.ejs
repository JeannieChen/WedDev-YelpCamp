<%- include("../partials/header") %>

<div class="container">
	<h3 style="text-align: center"> Add New Comment to <%= campground.name %></h3>
	<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
		<div style="width: 30%; margin: 2rem auto">
			<div class="form-group">
	  			<input type="text" name="comment[text]" placeholder="Comment" class="form-control" id="formGroupExampleInput">
  			</div>

			<div class="form-group">
	  			<input type="text" name="comment[author]" placeholder="Your Name" class="form-control" id="formGroupExampleInput2">
  			</div>	
			
			<button type="submit" class="btn btn-primary btn-block">Submit</button>	
		</div>
	</form>
</div>

<%- include("../partials/footer") %>